{
	"database": {
		"rules": "database.rules.json"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"site": "ptrchoi",
		"public": "build",
		"ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}
